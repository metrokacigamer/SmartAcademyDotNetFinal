@model UserSettingsViewModel
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<ul style="border: solid; border-radius: 5px; border-width: 1px; padding-left: 0;">
				<li class="list-group-item btn-secondary" style="border-bottom: solid; border-bottom-width: 1px;">
					<a class="btn" href="@Url.Action("GetProfileSettings", new { actionName = "ChangeUsername"})">User Name</a>
				</li>
				<li class="list-group-item btn-secondary" style="border-bottom: solid; border-bottom-width: 1px;">
					<a class="btn" href="@Url.Action("GetProfileSettings", new { actionName = "ChangePassword"})">Change Password</a>
				</li>
				<li class="list-group-item btn-secondary">
					<a class="btn" href="@Url.Action("GetProfileSettings", new { actionName = "ChangeEmail"})">Email</a>
				</li>
			</ul>
		</div>
		<div class="col-md-9">
			@switch (Model.ActionName)
			{
				case "ChangeUsername":
					{
						@Html.Partial("GetProfileSettings/_EditProfileUsernamePartial", Model)
						break;
					}
				case "ChangePassword":
					{
						@Html.Partial("GetProfileSettings/_EditProfilePasswordPartial", Model)
						break;
					}
				case "ChangeEmail":
					{
						@Html.Partial("GetProfileSettings/_EditProfileEmailPartial", Model)
						break;
					}
				default:
					{
						goto case "ChangeUsername";
					}
			}
		</div>
	</div>

</div>